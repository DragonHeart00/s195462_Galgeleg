<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1735"
    tools:context=".fragments.HomeView">


    <Button
        android:id="@+id/tilfældigt_id"
        android:layout_width="233dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bt_background"
        android:text="Tilfældigt "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/land_id"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dyr_id"
        android:layout_width="233dp"
        android:layout_height="57dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/bt_background"
        android:text="Dyrene"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frugter_id"
        android:layout_width="233dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bt_background"
        android:text="Frugter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dyr_id" />

    <Button
        android:id="@+id/land_id"
        android:layout_width="233dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bt_background"
        android:text="Lande"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frugter_id" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Vælg din yndlings kategori"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dyr_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554" />


</androidx.constraintlayout.widget.ConstraintLayout>